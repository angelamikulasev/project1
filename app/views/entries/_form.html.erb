<%= form_for @entry do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true %>
  </div>
  <div>
    <%= f.label :date %>
    <%= f.date_field :date, :autofocus => true %>
  </div>
  <div class="entry">
    <%= f.label :entry%>
    <%= f.text_field :entry, :autofocus => true %>
  </div>
    <div>
    <%= f.label :image %>
    <%= f.text_field :image %>
  </div>
  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>
  <div>
    <%= f.label :country %>
    <%= f.collection_select(:country_id, Country.all, :id, :country, { :prompt => true }) %>
  </div>

  <%= f.submit %>
<% end %>