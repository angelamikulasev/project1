<%= form_for @entry do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name, :autofocus => true %>
  </div>
  <div>
    <%= f.label :date %>
    <%= f.date_field :date, :autofocus => true %>
  </div>
  <div class="entry">
    <%= f.label :entry%>
    <%= f.text_area :entry, :autofocus => true, :cols => "80", :rows => "5" %>
  </div>
    <div>
    <%= f.label :image %>
    <%= f.text_field :image %>
  </div>
  <div>
    <%= f.label :location %>
    <%= f.text_field :location, :size => 35, :class => "geocomplete" %>
  </div>
  <div>
    <%= f.label :country %>
    <%= f.collection_select(:country_id, @current_user.countries, :id, :country, { :prompt => true }) %>
  </div>

  <%= f.submit %>
<% end %>

<script src="http://maps.googleapis.com/maps/api/js?sensor=false&amp;libraries=places"></script>
<script src="jquery.geocomplete.js"></script>
<script type="text/javascript">
  $("input.geocomplete").geocomplete();
</script>