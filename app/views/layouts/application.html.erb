<!DOCTYPE html>
<html class="<%= params[:controller] %>-<%= params[:action] %>">
<head>
  <title>Travel</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>


<body>


<nav class="navbar navbar-default navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">TravelTrax</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
              <ul class="nav navbar-nav">
                  <% if @current_user.present? %>
                    <li class="loggedin"><%= link_to 'Dashboard', countries_path %></li>
                    <li class="loggedin"><%= link_to 'Add Country', new_country_path %></li>
                    <li class="loggedin"><%= link_to 'Add Entry', new_entry_path %></li>
                    <li class="loggedin"><%= link_to 'View map', locations_path %></li>
                    <li class="loggedin"><%= link_to "Sign out #{@current_user.name}", login_path, method: :delete, data: { confirm: 'Are you sure?'} %></li>
                  <% else %>
                      <li class="login"><%= link_to 'Sign up', new_user_path %></li>
                      <li class="login"><%= link_to 'Login', login_path %></li>
                  <% end %>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>


  <div class="container">
  <div class="row">
    <div class="yield">
      <%= yield %>
    </div>






